{
    "$id": "https://saman.dev/asml/schemas/schema.json",
    "$schema": "https://json-schema.org/draft-07/schema",
    "title": "Application State Modeling Language",
    "description": "A domain specific language for enabling run-time state migration between same-purpose applications of different vendors",
    "type": "object",
    "version": "1.0.0",
    "properties": {
        "asml": {
            "$ref": "#/definitions/asml"
        },
        "info": {
            "$ref": "#/definitions/info"
        },
        "properties": {
            "additionalProperties": {
                "$ref": "#/definitions/Schema"
            }
        },
        "required": {
            "type": "array",
            "items": {
                "type": "string"
            }
        },
        "$schema": {
            "type": "string"
        },
        "$id": {
            "type": "string"
        }
    },
    "required": [
        "asml",
        "info",
        "properties"
    ],
    "additionalProperties": false,
    "definitions": {
        "version": {
            "type": "string",
            "pattern": "^([0-9]{1,}.[0-9]{1,}.[0-9]{1,})$"
        },
        "asml": {
            "description": "ASML Specification semantic version number.",
            "$ref": "#/definitions/version"
        },
        "info": {
            "type": "object",
            "required": [
                "title",
                "version"
            ],
            "properties": {
                "title": {
                    "type": "string"
                },
                "description": {
                    "type": "string"
                },
                "contact": {
                    "$ref": "#/definitions/contact"
                },
                "version": {
                    "$ref": "#/definitions/version"
                }
            },
            "additionalProperties": false
        },
        "contact": {
            "type": "object",
            "properties": {
                "name": {
                    "type": "string"
                },
                "email": {
                    "type": "string",
                    "format": "email"
                },
                "url": {
                    "type": "string",
                    "format": "uri-reference"
                }
            },
            "additionalProperties": false
        },
        "Schema": {
            "type": "object",
            "properties": {
                "title": {
                    "type": "string"
                },
                "multipleOf": {
                    "type": "number",
                    "minimum": 0,
                    "exclusiveMinimum": 0
                },
                "maximum": {
                    "type": "number"
                },
                "exclusiveMaximum": {
                    "type": "number",
                    "default": 0
                },
                "minimum": {
                    "type": "number"
                },
                "exclusiveMinimum": {
                    "type": "number",
                    "default": 0
                },
                "maxLength": {
                    "type": "integer",
                    "minimum": 0
                },
                "minLength": {
                    "type": "integer",
                    "minimum": 0,
                    "default": 0
                },
                "pattern": {
                    "type": "string",
                    "format": "regex"
                },
                "maxItems": {
                    "type": "integer",
                    "minimum": 0
                },
                "minItems": {
                    "type": "integer",
                    "minimum": 0,
                    "default": 0
                },
                "uniqueItems": {
                    "type": "boolean",
                    "default": false
                },
                "maxProperties": {
                    "type": "integer",
                    "minimum": 0
                },
                "minProperties": {
                    "type": "integer",
                    "minimum": 0,
                    "default": 0
                },
                "required": {
                    "type": "array",
                    "items": {
                        "type": "string"
                    },
                    "minItems": 1,
                    "uniqueItems": true
                },
                "enum": {
                    "type": "array",
                    "items": {},
                    "minItems": 1,
                    "uniqueItems": false
                },
                "type": {
                    "type": "string",
                    "enum": [
                        "array",
                        "boolean",
                        "integer",
                        "number",
                        "object",
                        "string",
                        "null"
                    ]
                },
                "not": {
                    "$ref": "#/definitions/Schema"
                },
                "allOf": {
                    "type": "array",
                    "items": {
                        "$ref": "#/definitions/Schema"
                    }
                },
                "oneOf": {
                    "type": "array",
                    "items": {
                        "$ref": "#/definitions/Schema"
                    }
                },
                "anyOf": {
                    "type": "array",
                    "items": {
                        "$ref": "#/definitions/Schema"
                    }
                },
                "items": {
                    "$ref": "#/definitions/Schema"
                },
                "properties": {
                    "type": "object",
                    "additionalProperties": {
                        "$ref": "#/definitions/Schema"
                    }
                },
                "additionalProperties": {
                    "oneOf": [
                        {
                            "$ref": "#/definitions/Schema"
                        },
                        {
                            "type": "boolean"
                        }
                    ],
                    "default": true
                },
                "description": {
                    "type": "string"
                },
                "format": {
                    "type": "string"
                },
                "default": {},
                "readOnly": {
                    "type": "boolean",
                    "default": false
                },
                "writeOnly": {
                    "type": "boolean",
                    "default": false
                },
                "example": {},
                "deprecated": {
                    "type": "boolean",
                    "default": false
                }
            },
            "additionalProperties": false
        }
    }
}
